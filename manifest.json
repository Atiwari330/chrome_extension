{
  "manifest_version": 3,
  "name": "Google Meet Real-Time Transcription",
  "version": "1.0.0",
  "description": "Real-time transcription for Google Meet with dual audio capture",
  "minimum_chrome_version": "116",
  
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabCapture",
    "alarms"
  ],
  
  "host_permissions": [
    "https://meet.google.com/*"
  ],
  
  "background": {
    "service_worker": "service-worker.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["logger.js", "floating-ui.js", "audio-processor.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "permission.html",
        "permission.js",
        "floating-ui.js",
        "styles.css",
        "audio-worklet-processor.js",
        "audio-processor.js",
        "logger.js"
      ],
      "matches": ["https://meet.google.com/*"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html"
  },
  
  "options_page": "options.html"
}